@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</div>
<div class="text-center">

    <h1>@ViewData["Title"]</h1>
    <h4>С Вашия @Model.LoginProvider акаунт.</h4>


    <hr />


    <br>
    <p class="text-info">
        Успяхте да влезете с <strong>@Model.LoginProvider</strong>.
        Напишете Потребителско Име за да приключите регистрацията.
    </p>

</div>



<div class="row justify-content-center align-items-center">
    <form class="col-lg-4" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Username"></label>
            <input asp-for="Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Регистрирай се</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
