@model IEnumerable<NeighbourhoodServices.Web.ViewModels.Announcement.AnnouncementCategoriesView>
@{
}

<div class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-start">
            <div class="col-md-12 ftco-animate text-center mb-5">
                <p class="breadcrumbs mb-0"><span class="mr-3"><a asp-controller="Home" asp-action="Index">Начало <i class="ion-ios-arrow-forward"></i></a></span><span>Публикувай Обява</span></p>
                <h1 class="mb-3 bread">Публикувай Обява</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-12 mb-5">

                <form method="post" class="p-5 bg-white">
                    <div class="radio">
                        <label><input type="radio" name="ServiceType" value="1">Object</label>
                        <label><input type="radio" name="ServiceType" value="2">Work</label>
                    </div>
                    <div class="col-md-12 mb-3 mb-md-0">
                        <input type="text" class="form-control" name="title" placeholder="Тема">
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12"><h3>Обяснете какво точно ви трябва</h3></div>
                        <div class="col-md-12 mb-3 mb-md-0">
                            <textarea name="description" class="form-control" id="" cols="30" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Бюджет</label>
                        <input type="number" class="form-control" min="10" placeholder="50лева/ден" name="price">
                        <select class="form-control" id="exampleFormControlSelect1" name="priceFor">
                            <option>На час</option>
                            <option>На ден</option>
                            <option>Обща цена</option>
                            <option>Няма цена</option>
                        </select>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-md-12">
                            <h3>Място</h3>
                        </div>
                        <div class="col-md-12 mb-3 mb-md-0">
                            <input type="text" class="form-control" name="address" placeholder="Улица, Град">
                        </div>
                    </div>
                    <div class="form-group col-md-4" name="category">
                        <label for="inputState">State</label>
                        <select id="inputState" class="form-control" name="category">
                            <option selected>Choose...</option>

                            @foreach (var category in Model)
                            {
                                <option value="@category.Id">@category.Name</option>

                            }
                        </select>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Post" asp-controller="Announcement" asp-action="PostAnnouncement" class="btn btn-primary  py-2 px-5">
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</section>



