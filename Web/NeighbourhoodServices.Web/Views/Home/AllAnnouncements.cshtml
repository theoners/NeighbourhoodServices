@model NeighbourhoodServices.Web.ViewModels.Announcements.GetAllViewModel;
<div class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</div>


<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
               <h2 class="mb-0">Топ Категории</h2>
            </div>
        </div>
        <div class="row">
            <partial name="_TopCategory" />
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pb bg-light">
    <div class="container">
       <div class="row">
            <partial name="_Search"/>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 pr-lg-4">
                <div class="row">

                    <partial name="_Anouncement" />

                </div>


                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>

                                @if (Model.Page.PagesCount > 1)
                                {

                                    if (Model.Page.CurrentPage != 1)
                                    {
                                        <li><a asp-controller="Home" asp-action="AllAnnouncements" asp-route-currentPage="@(Model.Page.CurrentPage - 1)">&lt;</a></li>
                                    }


                                    for (int i = 1; i <= Model.Page.PagesCount; i++)
                                    {
                                        var active = Model.Page.CurrentPage == i ? "active" : string.Empty;

                                        <li class="@active"><a asp-controller="Home" asp-action="AllAnnouncements" value="@i" asp-route-currentPage="@i">@i</a></li>
                                    }
                                    var disabledNext = Model.Page.CurrentPage == 1 ? "disabled" : string.Empty;
                                    if (Model.Page.CurrentPage != Model.Page.PagesCount)
                                    {
                                        <li><a class="@disabledNext" asp-controller="Home" asp-action="AllAnnouncements" asp-route-currentPage="@(Model.Page.CurrentPage + 1)">&gt;</a></li>
                                    }

                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
           </div>
    </div>
</section>

<partial name="_Subscribe"/>
